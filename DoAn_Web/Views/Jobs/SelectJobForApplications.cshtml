@model List<DoAn_Web.Models.JobPosting>
@if (TempData["ErrorMessage"] != null)
{
            <div class="alert alert-danger alert-floating" role="alert">
        @TempData["ErrorMessage"]
            </div>
}

<div class="job-selection-container">
    <h2 class="job-selection-title">Chọn công việc để xem ứng viên</h2>

    @if (Model.Any())
    {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Tiêu đề</th>
                        <th>Ngày đăng</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var job in Model)
                {
                            <tr>
                                <td>@job.Title</td>
                                <td>@job.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a asp-action="ViewApplications" asp-route-jobId="@job.JobId" class="btn btn-primary uniform-btn">Xem ứng viên</a>
                                </td>
                            </tr>
                }
                </tbody>
            </table>
    }
    else
    {
            <p>Bạn chưa đăng công việc nào.</p>
    }

    <div class="action-buttons">
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary uniform-btn">Quay lại</a>
    </div>
</div>

